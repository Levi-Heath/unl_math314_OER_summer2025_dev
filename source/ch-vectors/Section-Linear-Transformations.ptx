      \begin{tikzpicture}[scale=.8]

  \draw[-\gt ] (0,0)--(3,0);
  \draw[-\gt ] (0,0)--(0,3);
  \draw[-\gt ] (0,0)--(-1.5,-1);

  
  \draw[\lt -\gt ] (4,2)--(8,2);
  \draw[\lt -\gt ] (5,-1)--(5,3);
  \draw[line width=2pt,blue](4.5,3)--(6.5,-1) node[above, right]{Image of \(T\)};
  
  \draw [-\gt ,line width=1pt,-stealth]  (2,-1) to[out=-60, in=240] (4.5, -1);
   \node[] at (3.25, -1)   (b) {\(T\)};
